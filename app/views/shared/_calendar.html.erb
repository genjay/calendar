<div class="col-sm-6 col-md-4">
  <div class="bluethumbnail">
    <div class="smallimg">
      <%= link_to calender do%>
        <img src="http://i.imgur.com/Ew5EtzA.jpg" alt="..." class="img-responsive">
      <% end %>
    </div>
    <ul class="housemain">
        <li class="fright">
          <%= link_to '', calender, method: :delete, data: { confirm: 'Are you sure?'  } , class: 'fa fa-trash-o'%>
