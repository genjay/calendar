<div class="container">
      <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-login">
          <div class="panel-heading">
            <div class="row">

                <a href="#" class="active" id="login-form-link">登入囉</a>

            </div>
            <hr>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-12">

  <%= form_for(@login_form, url: sign_in_path , id: 'login-form') do |f| %>
    <% if @login_form.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @login_form.errors.full_messages.each do |msg|%>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
    <%= f.text_field :email  , class: 'form-control' , placeholder: '電子郵件'  %>
    </div>
    <div class="form-group">
    <%= f.password_field :password , class: 'form-control' , placeholder: '密碼' %>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
    <%= f.submit '登入' , class: 'form-control btn btn-login' , id: 'login-submit' %>
            </div>
          </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-12">
          <div class="text-center">
            <%= link_to '忘記密碼?', recover_path, tabindex: 5, class: 'forgot-password'%>

          </div>
        </div>
      </div>
    </div>
  <% end %>

                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>