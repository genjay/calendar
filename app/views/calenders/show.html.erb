<div id="calendar"></div>

<div class="page-header">
  <%= link_to calenders_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_calender_path(@calender), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <%= link_to calender_events_path(@calender), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-edit"></span>
    我要共筆事件
  <% end %>

  <%= link_to calender_path(@calender, format: :ics), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-calendar"></span>
    下載 .ics 日曆檔
  <% end %>
  <h1>Show calender</h1>
</div>

<dl class="dl-horizontal">
  <dt>User:</dt>
  <dd><%= @calender.user %></dd>

  <dt>Name:</dt>
  <dd><%= @calender.name %></dd>

  <dt>Public:</dt>
  <dd><%= @calender.public %></dd>

</dl>
