<div class="container">
<div class="page-header">
  <%= link_to new_calender_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    新增行事曆
  <% end %>
  <h3>
<%= @user.nickname %>(<%= @user.email %>)
 已建立的行事曆</h3>
</div>
      <div class="row">
          <%= content_tag_for(:tr, @user.calenders) do |calender| %>
            <div class="col-sm-6 col-md-4">
              <div class="bluethumbnail">
                <div class="smallimg">
                <%= link_to calender do%>
                <img src="http://i.imgur.com/Ew5EtzA.jpg" alt="..." class="img-responsive">
                <% end %>
                </div>
                <ul class="housemain">
                    <li class="calname"><%= calender.name %></li>
                    <li class="green01">作者<%= calender.user %></li>
                    <li class="green02">創立於：2015/05/08</li>
                    <li class="fright padtop"><button type="button" class="btn btn-default"><i class="fa fa-trash-o"></i> 刪除</button></li>


                </ul>
                <div class="clear"></div>
              </div>
            </div>
          <% end %>
      </div>


</div>



