<div class="container">
<div class="page-header">
  <%= link_to new_calender_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    新增行事曆
  <% end %>
  <h3>
<%= @user.nickname %>(<%= @user.email %>)
 已建立的行事曆</h3>
</div>
      <div class="row">
          <%= content_tag_for(:tr, @user.calenders) do |calender| %>
          <div class="col-sm-6 col-md-4">
            <div class="bluethumbnail">
              <div class="smallimg">
              <img src="http://i.imgur.com/Ew5EtzA.jpg" alt="..." class="img-responsive">
              </div>
              <ul class="housemain">
                  <li class="fright">
                    <%= link_to '', calender , class: 'fa fa-eye' %>
                    <%= link_to '', calender, method: :delete, data: { confirm: 'Are you sure?'  } , class: 'fa fa-trash-o'%>
                    </li>

                  <li>
                    <%= calender.name %>
                    
                  </li>
                  <li class="green01">作者<%= calender.user %></li>
                  <li class="green02"><%= calender.public %></li>
                  <li class="green02">創立於：2015/05/08</li>


              </ul>
              <div class="clear"></div> 
            </div>
          </div>
          <% end %>
      </div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Public</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @calenders) do |calender| %>
            <td><%= calender.name %></td>
            <td><%= calender.public? %></td>
            <td><%= link_to 'Show', calender %></td>
        <td><%= link_to 'Edit', edit_calender_path(calender) %></td>
        <td><%= link_to 'Destroy', calender, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

</div>



